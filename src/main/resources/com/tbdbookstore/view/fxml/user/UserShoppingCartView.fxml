<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tbdbookstore.core.control.user.UserShoppingCartViewController">
    <padding>
        <Insets left="20.0" right="10.0" top="10" />
    </padding>
    <top>
      <VBox>
         <children>
            <Label text="Order Summary" textFill="#757575">
               <VBox.margin>
                  <Insets bottom="5.0" left="22.0" right="5.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <GridPane hgap="15.0" vgap="5.0">
               <VBox.margin>
                  <Insets bottom="5.0" left="35.0" right="5.0" top="5.0" />
               </VBox.margin>
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" percentWidth="0.0" />
                  <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Subtotal:" textFill="#757575" />
