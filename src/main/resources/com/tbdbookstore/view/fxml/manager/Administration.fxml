          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.tbdbookstore.core.control.manager.ManagerAdministrationController"
          prefHeight="400.0" prefWidth="600.0">
    <GridPane.margin>
        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
    </GridPane.margin>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="0.0" vgrow="SOMETIMES" />
        <RowConstraints percentHeight="0.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" percentHeight="0.0" prefHeight="50.0" vgrow="SOMETIMES" />
