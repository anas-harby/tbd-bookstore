<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.CardPane?>
<?import com.jfoenix.controls.*?>
<?import com.jfoenix.validation.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tbdbookstore.core.control.manager.ManagerHomeViewController"
            prefHeight="400.0" prefWidth="600.0" >
    <padding>
        <Insets left="10.0" />
    </padding>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <HBox spacing="5.0">
                    <children>
                        <JFXTextField fx:id="searchArea" focusColor="#242e3d" maxWidth="1147.0" prefHeight="35.0" promptText="Search..." style="-fx-background-color: #00000000;" HBox.hgrow="ALWAYS" />
                        <JFXButton style="-fx-background-color: #00000000;" text="">
                            <graphic>
                                <FontAwesomeIconView glyphName="SEARCH" style="-fx-font-family: FontAwesome;"/>
                            </graphic>
                        </JFXButton>
                        <JFXButton style="-fx-background-color: #00000000;" onMouseClicked="#addBook" text="">
                            <graphic>
                                <FontAwesomeIconView glyphName="PLUS" style="-fx-font-family: FontAwesome;"/>
                            </graphic>
                        </JFXButton>
                    </children>
                </HBox>
                <HBox prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label fx:id="sortISBN" graphicTextGap="5.0" style="-fx-cursor: hand; -fx-text-fill: #757575;" text="ISBN">
                            <graphic>
                                <FontAwesomeIconView glyphName="SORT" fill="#757575" />
                            </graphic>
                        </Label>
                        <Label fx:id="sortTitle" graphicTextGap="5.0" style="-fx-cursor: hand; -fx-text-fill: #757575;" text="Title">
                            <graphic>
                                <FontAwesomeIconView glyphName="SORT" fill="#757575" />
                            </graphic>
                        </Label>
                        <Label fx:id="sortPrice" graphicTextGap="5.0" style="-fx-cursor: hand; -fx-text-fill: #757575;" text="Price">
                            <graphic>
                                <FontAwesomeIconView glyphName="SORT" fill="#757575" />
                            </graphic>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </top>
    <BorderPane.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </BorderPane.margin>
    <center>

        <ScrollPane prefHeight="200.0" prefWidth="200.0" style="-fx-fit-to-height: true; -fx-fit-to-width: true;" BorderPane.alignment="CENTER">
            <content>
                <CardPane fx:id="cardPane" style="-fx-fit-to-width: true;" styleClass="card-pane" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                </CardPane>
            </content>
            <BorderPane.margin>
                <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
            </BorderPane.margin>
        </ScrollPane>
    </center>
    <bottom>
        <AnchorPane prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <JFXButton layoutX="38.0" maxWidth="60.0" prefWidth="60.0" style="-fx-background-color: rgba(0,0,0,0); -fx-text-fill: #757575;" text="Prev" AnchorPane.leftAnchor="38.0" AnchorPane.rightAnchor="898.0" />
                <JFXButton layoutX="889.0" maxWidth="60.0" prefWidth="60.0" style="-fx-background-color: rgba(0,0,0,0); -fx-text-fill: #757575;" text="Next" AnchorPane.leftAnchor="889.0" AnchorPane.rightAnchor="47.0" />
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" top="-10.0" />
            </BorderPane.margin>
        </AnchorPane>
    </bottom>

    <JFXDialog fx:id="addBookDialog">
        <JFXDialogLayout>
            <heading>
                <Label>Add New Book</Label>
            </heading>
            <body>
                <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="30.0">
                    <children>
                        <JFXTextField fx:id="isbnField" prefWidth="500.0" promptText="ISBN-13" style="-fx-prompt-text-fill: #757575;">
                            <validators>
                                <RequiredFieldValidator message="Input Required!">
                                    <FontAwesomeIconView glyphName="EXCLAMATION" style="-fx-font-family: FontAwesome;"/>
                                </RequiredFieldValidator>
                                <NumberValidator message="Input Must Be A Number!">
                                    <FontAwesomeIconView glyphName="WARNINNG" style="-fx-font-family: FontAwesome;"/>
                                </NumberValidator>
                            </validators>
                        </JFXTextField>
                        <JFXTextField fx:id="titleField" prefWidth="500.0" promptText="Title" style="-fx-prompt-text-fill: #757575;">
                            <validators>
                                <RequiredFieldValidator message="Input Required!">
                                    <FontAwesomeIconView glyphName="EXCLAMATION" style="-fx-font-family: FontAwesome;"/>
                                </RequiredFieldValidator>
                            </validators>
                        </JFXTextField>
                        <JFXTextField fx:id="authorsField" prefWidth="500.0" promptText="Author(s)" style="-fx-prompt-text-fill: #757575;">
                            <validators>
                                <RequiredFieldValidator message="Input Required!">
                                    <FontAwesomeIconView glyphName="EXCLAMATION" style="-fx-font-family: FontAwesome;"/>
                                </RequiredFieldValidator>
                            </validators>
                        </JFXTextField>
                        <HBox spacing="20.0">
                            <children>
                                <JFXTextField fx:id="publisherField" promptText="Publisher" style="-fx-prompt-text-fill: #757575;" HBox.hgrow="ALWAYS">
                                    <validators>
                                        <RequiredFieldValidator message="Input Required!">
                                            <FontAwesomeIconView glyphName="EXCLAMATION" style="-fx-font-family: FontAwesome;"/>
                                        </RequiredFieldValidator>
                                    </validators>
                                </JFXTextField>
                                <JFXTextField fx:id="yearField" prefWidth="60.0" promptText="Year" style="-fx-prompt-text-fill: #757575;">
                                    <validators>
                                        <RequiredFieldValidator message="Input Required!">
                                            <FontAwesomeIconView glyphName="EXCLAMATION" style="-fx-font-family: FontAwesome;"/>
                                        </RequiredFieldValidator>
                                    </validators>
                                </JFXTextField>
                            </children>
                        </HBox>
                        <HBox spacing="20.0">
                            <children>
                                <JFXComboBox fx:id="genreField" prefWidth="200.0" promptText="Genre" style="-fx-prompt-text-fill: #757575;" />
                                <JFXTextField fx:id="priceField" prefWidth="200.0" promptText="Price ($)" style="-fx-prompt-text-fill: #757575;" HBox.hgrow="ALWAYS">
                                    <validators>
                                        <RequiredFieldValidator message="Input Required!">
                                            <FontAwesomeIconView glyphName="EXCLAMATION" style="-fx-font-family: FontAwesome;"/>
                                        </RequiredFieldValidator>
                                    </validators>
                                </JFXTextField>
                                <JFXTextField fx:id="quantityField" prefWidth="200" promptText="Quantity" style="-fx-prompt-text-fill: #757575;" HBox.hgrow="ALWAYS">
                                    <validators>
                                        <NumberValidator message="Input must be a number!">
                                            <FontAwesomeIconView glyphName="EXCLAMATION" style="-fx-font-family: FontAwesome;"/>
                                        </NumberValidator>
                                    </validators>
                                </JFXTextField>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                    </padding>
                </VBox>

            </body>
            <actions>
                <JFXButton fx:id="acceptButton" onMouseClicked="#acceptBookDialog" prefWidth="100" style="-fx-background-color: #757575; -fx-text-fill: #ffffff;">Add
                </JFXButton>
                <JFXButton fx:id="cancelButton" onMouseClicked="#cancelBookDialog" prefWidth="100">Cancel
                </JFXButton>
            </actions>
        </JFXDialogLayout>

    </JFXDialog>
</BorderPane>

