                              <ImageView fitHeight="36" fitWidth="36" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
                                  <image>
                                      <Image url="@../../img/avatar.png" />
                                  </image>
                              </ImageView>
                          </children>
                      </AnchorPane>
                  <JFXListView minWidth="200" minHeight="300" style="-fx-background-color: #00000000">
                      <AnchorPane onMouseClicked="#switchToHomeView" >
                          <Label graphicTextGap="15" minWidth="200" style="-fx-font-size: 14;">Home
                          <graphic>
                              <FontAwesomeIconView glyphName="HOME" glyphSize="16" glyphStyle="-fx-fill: #FFFFFF;" />
