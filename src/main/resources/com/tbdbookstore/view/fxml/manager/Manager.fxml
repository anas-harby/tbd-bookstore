                          </Label>
                          <FontAwesomeIconView glyphName="ANGLE_RIGHT" glyphSize="14" glyphStyle="-fx-fill: #FFFFFF;"
                                               AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"/>
                      </AnchorPane>
                      <JFXButton fx:id="logOut" alignment="CENTER" focusTraversable="false" graphicTextGap="10.0" layoutX="1.0" layoutY="757.0" minWidth="200.0" text="Logout" textFill="WHITE">
