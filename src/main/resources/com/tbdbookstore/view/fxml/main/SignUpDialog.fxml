<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import com.jfoenix.validation.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<fx:root fx:id="root" maxHeight="-Infinity" style="-fx-background-color:#00000000;" maxWidth="-Infinity"
         minHeight="-Infinity" minWidth="-Infinity" prefWidth="800.0" type="com.jfoenix.controls.JFXDialog"
         xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
    <JFXDialogLayout>
        <heading>
            <Label fx:id="heading">Please fill in the following info</Label>
        </heading>
        <body>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="30.0">
                <children>
                    <HBox spacing="20.0">
                        <Label>
                            <graphic>
                                <FontAwesomeIconView glyphName="USER" glyphSize="20" glyphStyle="-fx-fill: #757575;" />
                            </graphic>
                        </Label>
                        <JFXTextField fx:id="userNameField" prefWidth="480.0" promptText="User Name"
                                      style="-fx-prompt-text-fill: #757575;">
                            <validators>
                                <RequiredFieldValidator message="Input Required!">
                                    <FontAwesomeIconView glyphName="WARNING" style="-fx-font-family: FontAwesome;"/>
                                </RequiredFieldValidator>
                            </validators>
                        </JFXTextField>
                    </HBox>
                    <HBox spacing="20.0">
                        <Label>
                            <graphic>
                                <FontAwesomeIconView glyphName="LOCK" glyphSize="20" glyphStyle="-fx-fill: #757575;" />
                            </graphic>
                        </Label>
                        <JFXPasswordField fx:id="passwordField" prefWidth="231.0" promptText="Password"
                                      style="-fx-prompt-text-fill: #757575;">
                            <validators>
                                <RequiredFieldValidator message="Input Required!">
                                    <FontAwesomeIconView glyphName="WARNING" style="-fx-font-family: FontAwesome;"/>
                                </RequiredFieldValidator>
                            </validators>
                        </JFXPasswordField>
                        <JFXPasswordField fx:id="confirmPasswordField" prefWidth="231.0" promptText="Confirm Password"
                                      style="-fx-prompt-text-fill: #757575;">
                            <validators>
                                <RequiredFieldValidator message="Input Required!">
                                    <FontAwesomeIconView glyphName="WARNING" style="-fx-font-family: FontAwesome;"/>
                                </RequiredFieldValidator>
                            </validators>
                        </JFXPasswordField>
                    </HBox>
                    <HBox spacing="20.0">
                        <children>
                            <Label>
                                <graphic>
                                    <FontAwesomeIconView glyphName="INFO" glyphSize="20" glyphStyle="-fx-fill: #757575;" />
                                </graphic>
                            </Label>
                            <JFXTextField fx:id="firstNameField" prefWidth="231.0" promptText="First Name"
                                          style="-fx-prompt-text-fill: #757575;">
                                <validators>
                                    <RequiredFieldValidator message="Input Required!">
                                        <FontAwesomeIconView glyphName="WARNING" style="-fx-font-family: FontAwesome;"/>
                                    </RequiredFieldValidator>
                                </validators>
                            </JFXTextField>
                            <JFXTextField fx:id="lastNameField" prefWidth="231.0" promptText="Last Name"
                                          style="-fx-prompt-text-fill: #757575;">
                                <validators>
                                    <RequiredFieldValidator message="Input Required!">
                                        <FontAwesomeIconView glyphName="WARNING" style="-fx-font-family: FontAwesome;"/>
                                    </RequiredFieldValidator>
                                </validators>
                            </JFXTextField>
                        </children>
                    </HBox>
                    <HBox spacing="15.0">
                    <Label>
                        <graphic>
                            <FontAwesomeIconView glyphName="ENVELOPE" glyphSize="20" glyphStyle="-fx-fill: #757575;" />
                        </graphic>
                    </Label>
                    <JFXTextField fx:id="emailField" prefWidth="480.0" promptText="Email"
                                  style="-fx-prompt-text-fill: #757575;">
                        <validators>
                            <RequiredFieldValidator message="Input Required!">
                                <FontAwesomeIconView glyphName="WARNING" style="-fx-font-family: FontAwesome;"/>
                            </RequiredFieldValidator>
                        </validators>
                    </JFXTextField>
                    </HBox>
                    <HBox spacing="20.0">
                    <Label>
                        <graphic>
                            <FontAwesomeIconView glyphName="PHONE" glyphSize="20" glyphStyle="-fx-fill: #757575;" />
                        </graphic>
                    </Label>
                    <JFXTextField fx:id="telNoField" prefWidth="480.0" promptText="Telephone Number"
                                  style="-fx-prompt-text-fill: #757575;">
                        <validators>
                            <RequiredFieldValidator message="Input Required!">
                                <FontAwesomeIconView glyphName="WARNING" style="-fx-font-family: FontAwesome;"/>
                            </RequiredFieldValidator>
                        </validators>
                    </JFXTextField>
                    </HBox>
                    <HBox spacing="15.0">
                    <Label>
                        <graphic>
                            <FontAwesomeIconView glyphName="ADDRESS_CARD" glyphSize="20" glyphStyle="-fx-fill: #757575;" />
                        </graphic>
                    </Label>
                    <JFXTextField fx:id="shippingAddrField" prefWidth="480.0" promptText="Shipping Address"
                                  style="-fx-prompt-text-fill: #757575;">
                        <validators>
                            <RequiredFieldValidator message="Input Required!">
                                <FontAwesomeIconView glyphName="WARNING" style="-fx-font-family: FontAwesome;"/>
                            </RequiredFieldValidator>
                        </validators>
                    </JFXTextField>
                    </HBox>
                </children>
                <padding>
                    <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                </padding>
            </VBox>

        </body>
        <actions>
            <JFXButton fx:id="acceptButton" prefWidth="100"
                       style="-fx-background-color: #757575; -fx-text-fill: #ffffff;">Sign Up
            </JFXButton>
            <JFXButton fx:id="cancelButton" prefWidth="100">Cancel
            </JFXButton>
        </actions>
    </JFXDialogLayout>
</fx:root>
